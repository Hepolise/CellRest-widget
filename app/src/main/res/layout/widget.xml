<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="@string/app_name"
        android:gravity="top"
        android:id="@+id/inet_logo"
        android:layout_width="30.0dip"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/ic_data_usage_white_48dp" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/calls_logo"
        android:layout_width="fill_parent"
        android:layout_height="30.0dp"
        android:src="@drawable/ic_local_phone_white_48dp" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_gravity="end"
        android:gravity="end"
        android:id="@+id/sms_logo"
        android:layout_width="fill_parent"
        android:layout_height="30.0dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_message_white_48dp" />


    <TextView
        android:id="@+id/inet"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textSize="20sp">
    </TextView>


    <TextView
        android:id="@+id/calls"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/sms"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|end"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/balance"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="bottom|center"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textSize="15sp">
    </TextView>

    <TextView
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="bottom|right"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textSize="12sp">
    </TextView>

    <TextView
        android:id="@+id/renew"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="bottom|left"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textSize="12sp">
    </TextView>





    <TextView
        android:id="@+id/text_upd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffffff"
        android:textSize="16sp">
    </TextView>
    <!--<TextView
        android:id="@+id/text_italic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="16sp">
    </TextView>
    <TextView
        android:id="@+id/text_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center|bottom"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="13sp">
    </TextView>-->
</RelativeLayout>